<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.allen.library.SuperTextView
        android:id="@+id/stv_title_info"
        app:layout_constraintHorizontal_weight="1"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:sLeftTextString="最热"
        app:sRightTextString="更多"
        app:sLeftTextColor="@android:color/black"
        app:sLeftTextSize="14sp"
        app:sRightTextColor="#b4afb1"
        app:sRightTextSize="12sp"
        app:sLeftViewMarginLeft="2dp"
        app:sRightViewMarginRight="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:sLeftIconRes="@drawable/reco_game_txt_icon"
        app:sRightIconRes="@drawable/icon_right_arrow_gray"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_recycle_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/stv_title_info"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>