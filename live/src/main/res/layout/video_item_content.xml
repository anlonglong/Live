<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="3dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/video_item_img"
                app:progressBarImage="@drawable/icon_progresss"
                app:failureImage="@drawable/icon_image_fialure"
                app:failureImageScaleType="center"
                app:progressBarAutoRotateInterval="1500"
                app:progressBarImageScaleType="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:actualImageScaleType="centerCrop"
                app:placeholderImage="@drawable/placeholder_topic_has_no_message"
                app:roundBottomLeft="true"
                app:retryImage="@drawable/placeholder_save_data_image"
                app:roundBottomRight="true"
                app:roundTopLeft="true"
                app:viewAspectRatio="2"
                app:roundTopRight="true"
                app:roundedCornerRadius="7dp"
                />

            <TextView
                android:id="@+id/video_people_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="7dp"
                tools:text="4444444"
                android:textSize="12sp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/recommend_online_bg"
                android:textColor="@android:color/white"
                />
        </RelativeLayout>

        <TextView
            android:layout_marginTop="2dp"
            android:id="@+id/live_rome_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            tools:text="sssssssssss"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="15sp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="3dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="3dp"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/video_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="10sp"
            android:text="sssssss"
            android:gravity="center_vertical"
            android:drawablePadding="2dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/home_reco_host_name_icon"
            android:textColor="@color/gray"/>
        <TextView
            android:id="@+id/live_play_time"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="10sp"
            android:layout_alignParentRight="true"
            android:text="sssssss"
            android:gravity="center_vertical"
            android:drawablePadding="2dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/icon_play_times"
            android:textColor="@color/gray"/>
    </RelativeLayout>
</LinearLayout>